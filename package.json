{
  "name": "eslint-plugin-diversity-inclusion",
  "version": "1.0.2",
  "description": "eslint plugin to encourage the use of inclusive code",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/eslint-plugin-diversity-inclusion.cjs.js",
  "module": "dist/eslint-plugin-diversity-inclusion.es.js",
  "files": [
    "dist"
  ],
  "engines": {
    "pnpm": ">=6",
    "node": ">=14"
  },
  "scripts": {
    "typecheck": "tsc --noEmit --project .",
    "start": "microbundle watch",
    "build": "microbundle",
    "lint": "eslint src ",
    "test": "jest",
    "release": "npm run build && np",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Mandy Nijssen",
  "dependencies": {
    "@types/eslint": "^8.2.0",
    "@types/requireindex": "^1.2.0",
    "requireindex": "^1.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "microbundle": "^0.14.2",
    "np": "^7.6.0",
    "prettier": "^2.5.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manij89/eslint-plugin-diversity-inclusion.git"
  },
  "bugs": {
    "url": "https://github.com/manij89/eslint-plugin-diversity-inclusion/issues"
  },
  "homepage": "https://github.com/manij89/eslint-plugin-diversity-inclusion#readme"
}
